@model WebBanGiay.Models.NguoiDungModel

@{
    ViewData["Title"] = "Sửa thông tin người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-primary text-white text-center">
                <h4 class="card-title mb-0">Sửa thông tin người dùng</h4>
            </div>
            <div class="card-body">
                <form asp-action="SuaNguoiDung" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="ID_NGUOI_DUNG" />
                    </div>

                    <div class="form-group">
                        <label asp-for="TAI_KHOAN" class="control-label">Tài khoản</label>
                        <input asp-for="TAI_KHOAN" class="form-control" readonly style="background-color: #f5f5f5; color: black;" />
                        <span asp-validation-for="TAI_KHOAN" class="text-danger"></span>
                    </div>


                    <div class="form-group">
                        <label asp-for="HO_TEN" class="control-label">Họ tên</label>
                        <input asp-for="HO_TEN" class="form-control" placeholder="Vui lòng nhập họ tên" style="background-color: #fff; color: black;" />
                        <span asp-validation-for="HO_TEN" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="EMAIL" class="control-label">Email</label>
                        <input asp-for="EMAIL" class="form-control" placeholder="Vui lòng nhập email" style="background-color: #fff; color: black;" />
                        <span asp-validation-for="EMAIL" class="text-danger"></span>
                    </div>

                    <div class="form-group" type="hidden">

                        <input asp-for="GTTT" type="hidden" class="form-control" />

                    </div>

                    <div class="form-group">
                        <label asp-for="SDT" class="control-label">Số điện thoại</label>
                        <input asp-for="SDT" class="form-control" placeholder="Vui lòng nhập số điện thoại" style="background-color: #fff; color: black;" />
                        <span asp-validation-for="SDT" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="DIA_CHI" class="control-label">Địa chỉ</label>
                        <input asp-for="DIA_CHI" class="form-control" placeholder="Vui lòng nhập địa chỉ" style="background-color: #fff; color: black;" />
                        <span asp-validation-for="DIA_CHI" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="MAT_KHAU" class="control-label d-none">Mật khẩu</label>
                        <input asp-for="MAT_KHAU" type="hidden" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input asp-for="VAI_TRO" type="hidden" class="form-control" />
                    </div>



                    <div class="form-group" type="hidden">

                        <input asp-for="HINH_ANH" type="hidden" class="form-control" placeholder="Hình ảnh" style="background-color: #fff; color: black;" />

                    </div>

                    <div style="margin: 10px 0px 10px 0px;" class="form-group">
                        <input style="background-color: #eb1515" type="submit" value="Lưu sửa người dùng" class="btn btn-primary form-control" style=" margin-top: 18px;" />
                    </div>
                    <div>
                        <a asp-action="Index">Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


