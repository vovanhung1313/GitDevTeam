@model WebBanGiay.Models.LoaiSanPhamModel

@{
    ViewData["Title"] = "Sua loại sản phẩm Admin";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white" style="background-color: #eb1515; border-radius: 5px 5px 0px 0px;">
                    <h4 class="card-title mb-0">Loại sản phẩm</h4>
                </div>
                <div class="card-body">
                    <form asp-action="SuaLoai">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID_LOAI" />
                        <div class="form-group mb-3">
                            <label asp-for="TEN_LOAI" class="control-label">Tên Loại sản phẩm</label>
                            <input asp-for="TEN_LOAI" class="form-control" />
                            <span asp-validation-for="TEN_LOAI" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Lưu" class="btn btn-primary" style="background-color:#212529; padding: 9px 176px 9px 176px" />
                            <a asp-action="Index" class="btn btn-secondary ms-2">Quay lại danh sách</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
