<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Biểu tượng favicon -->
    <link href="~/Admin/img/favicon.ico" rel="icon">

    <!-- Phông chữ Google Web -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&family=Roboto:wght@500;700&display=swap" rel="stylesheet">

    <!-- Stylesheet Font Icon -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Stylesheet Thư viện -->
    <link href="~/Admin/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Admin/lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Stylesheet Bootstrap tùy chỉnh -->
    <link href="~/Admin/css/bootstrap.min.css" rel="stylesheet">

    <!-- Stylesheet Mẫu -->
    <link href="~/Admin/css/style.css" rel="stylesheet">

</head>

<body>
    <div class="container-fluid position-relative d-flex p-0">
        <!-- Spinner Bắt đầu -->
        <div id="spinner" class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
            <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Đang tải...</span>
            </div>
        </div>
        <!-- Spinner Kết thúc -->
        <!-- Thanh bên Bắt đầu -->
        <div class="sidebar pe-4 pb-3">
            <nav class="navbar bg-secondary navbar-dark">
                <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="navbar-brand mx-4 mb-3">
                    <h3 class="text-primary">TeamDev<i class="fa fa-spider text-primary ms-2"></i></h3>
                </a>

                <div class="navbar-nav w-100">
                    <a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index" class="nav-item nav-link active"><i class="fa fa-tachometer-alt me-2"></i>Bảng điều khiển</a>
                    <a href="chart.html" class="nav-item nav-link"><i class="fa fa-chart-bar me-2"></i>Sản phẩm</a>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="fa fa-laptop me-2"></i>Danh mục</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="button.html" class="dropdown-item">Loại</a>
                            <a href="typography.html" class="dropdown-item">Kích thước</a>
                            <a href="element.html" class="dropdown-item">Màu sắc</a>
                        </div>
                    </div>
                    <a href="widget.html" class="nav-item nav-link"><i class="fa fa-th me-2"></i>Đơn hàng</a>
                    <a asp-controller="NhanVienAdmin" asp-action="Index" class="nav-item nav-link"><i class="fa fa-keyboard me-2"></i>Nhân viên</a>
                    <a asp-area="Admin" asp-controller="NguoiDungAdmin" asp-action="Index" class="nav-item nav-link"><i class="fa fa-table me-2"></i>Khách hàng</a>
                    
                    <div class="nav-item dropdown">
                        <a asp-area="Admin" asp-controller="NguoiDungAdmin" asp-action="Index" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"><i class="far fa-file-alt me-2"></i>Voucher</a>
                        <div class="dropdown-menu bg-transparent border-0">
                            <a href="signin.html" class="dropdown-item">Voucher 1</a>
                            <a href="signup.html" class="dropdown-item">Voucher 2</a>
                            <a href="404.html" class="dropdown-item">Voucher 3</a>
                            <a href="blank.html" class="dropdown-item">Voucher 4</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <!-- Thanh bên Kết thúc -->
        <!-- Nội dung Bắt đầu -->
        <div class="content">
            <!-- Thanh điều hướng Bắt đầu -->
            <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
                <a href="index.html" class="navbar-brand d-flex d-lg-none me-4">
                    <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
                </a>
                <a href="#" class="sidebar-toggler flex-shrink-0">
                    <i class="fa fa-bars"></i>
                </a>
                <form class="d-none d-md-flex ms-4">
                    <input class="form-control bg-dark border-0" type="search" placeholder="Tìm kiếm">
                </form>
                <div class="navbar-nav align-items-center ms-auto">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-envelope me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Tin nhắn</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon đã gửi cho bạn một tin nhắn</h6>
                                        <small>15 phút trước</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon đã gửi cho bạn một tin nhắn</h6>
                                        <small>15 phút trước</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <div class="d-flex align-items-center">
                                    <img class="rounded-circle" src="~/Admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                                    <div class="ms-2">
                                        <h6 class="fw-normal mb-0">Jhon đã gửi cho bạn một tin nhắn</h6>
                                        <small>15 phút trước</small>
                                    </div>
                                </div>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item text-center">Xem tất cả tin nhắn</a>
                        </div>
                    </div>
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            <i class="fa fa-bell me-lg-2"></i>
                            <span class="d-none d-lg-inline-flex">Thông báo</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Cập nhật hồ sơ</h6>
                                <small>15 phút trước</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Người dùng mới đã được thêm</h6>
                                <small>15 phút trước</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item">
                                <h6 class="fw-normal mb-0">Mật khẩu đã được thay đổi</h6>
                                <small>15 phút trước</small>
                            </a>
                            <hr class="dropdown-divider">
                            <a href="#" class="dropdown-item text-center">Xem tất cả thông báo</a>
                        </div>
                    </div>

                    @inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
                    @using WebBanGiay.Repository

                    @{
                        var user = HttpContextAccessor.HttpContext.Session.GetJson<WebBanGiay.Models.NguoiDungModel>("User");
                        var userName = user?.HO_TEN ?? "Tài khoản";
                       
                    }

                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown">
                            
                            <span class="d-none d-lg-inline-flex">@userName</span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-end bg-secondary border-0 rounded-0 rounded-bottom m-0">
                            <a asp-area="NguoiDung" asp-controller="NguoiDung" asp-action="TrangCaNhan" class="dropdown-item">Trang cá nhân</a>
                            <a asp-area="NguoiDung" asp-controller="NguoiDung" asp-action="QuenMatKhau" class="dropdown-item">Đổi mật khẩu</a>
                            <a asp-action="DangXuat" asp-controller="NguoiDungAdmin" class="dropdown-item">Đăng xuất</a>
                        </div>
                    </div>

                </div>
            </nav>
            <!-- Thanh điều hướng Kết thúc -->

            <div class="container">
                <partial name="_notificationPartial" />
                @RenderBody()
            </div>
        </div>
        <!-- Tiện Ích Kết Thúc -->
      

        <!-- Back to Top -->
        <a href="#" class="btn btn-lg btn-primary btn-lg-square back-to-top"><i class="bi bi-arrow-up"></i></a>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Admin/lib/chart/chart.min.js"></script>
    <script src="~/Admin/lib/easing/easing.min.js"></script>
    <script src="~/Admin/lib/waypoints/waypoints.min.js"></script>
    <script src="~/Admin/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Admin/lib/tempusdominus/js/moment.min.js"></script>
    <script src="~/Admin/lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="~/Admin/lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>

    <!-- Template Javascript -->
    <script src="~/Admin/js/main.js"></script>
    @RenderSection("Scripts", required: false)
</body>

</html>